<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:background="@color/colorDarkGrey"
    android:gravity="bottom"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_navigationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/profileImg_description"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/chat_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/img_navigationHeader"
        android:paddingTop="5dp"
        android:paddingHorizontal="8dp"
        android:textColor="@color/colorWhitePure"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical"
        android:paddingTop="5dp"
        android:background="@color/colorDarkGrey"
        android:src="@drawable/ic_exit_to_app_white_24dp" />

</RelativeLayout>